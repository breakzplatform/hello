<div class="p-8 sm:p-12 bg-pure-purple-500">
    {% for item in linktree[locale] %}
        {% if loop.first %}
            <ul>
            {% endif %}
            <li>
                <a target="_blank" rel="noopener noreferrer" class="flex drop-shadow-xl bg-pure-purple-900 hover:bg-pure-purple-800 shadow-inner rounded-lg px-4 py-2 {% if not loop.last %} mb-4 {% endif %} border-2 border-transparent" href="{{ item.link }}">
                    <div class="mr-4">{{ item.emoji | safe }}</div>
                    <div class="flex-grow">{{ item.name | safe }} {% if loop.first and locale === "pt" %}<span class="inline-block font-mono text-xs">#dev #boundaryless</span>{% endif %}</div>
                    </a>
            </li>
            {% if loop.last %}
            </ul>
        {% endif %}
    {% endfor %}
</div>